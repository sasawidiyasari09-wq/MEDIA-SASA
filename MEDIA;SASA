<script>
// BackSound
const bgMusic = document.getElementById('backgroundMusic');

// Toast
function showToast(msg, color='#48bb78'){
  const toast = document.createElement('div');
  toast.className='toast';
  toast.style.background=color;
  toast.textContent=msg;
  document.body.appendChild(toast);
  setTimeout(()=>document.body.removeChild(toast),3000);
}

// Kuis
const quizData=[
{question:"Media pembelajaran interaktif adalah‚Ä¶", options:["Media yang memungkinkan pengguna berinteraksi langsung dengan materi","Media yang tidak bisa diklik","Media yang hanya berbentuk buku","Media yang hanya berisi teks"], correct:0},
{question:"Mengapa media interaktif cocok untuk desain grafis?", options:["Karena desain grafis hanya butuh tulisan","Karena membuat belajar menjadi lebih visual dan menarik","Karena desain grafis tidak membutuhkan contoh gambar","Karena tidak memerlukan komputer"], correct:1},
{question:"Berikut ini bukan ciri media pembelajaran interaktif adalah‚Ä¶", options:["User bisa mengontrol materi","Ada tombol navigasi","Materi bisa memberikan umpan balik","Tidak bisa berinteraksi sama sekali"], correct:3}
];
let currentQuizQuestion=0, quizScore=0, selectedAnswer=null, quizAnswers=[];
function displayQuestion(){
  const q=quizData[currentQuizQuestion];
  document.getElementById('questionText').textContent=q.question;
  const container=document.getElementById('answerOptions');
  container.innerHTML='';
  q.options.forEach((opt,i)=>{
    const div=document.createElement('div');
    div.className='answer-option';
    div.textContent=opt;
    div.onclick=()=>selectAnswer(i,div);
    container.appendChild(div);
  });
}
function selectAnswer(idx,el){
  if(selectedAnswer!==null)return;
  selectedAnswer=idx;
  quizAnswers[currentQuizQuestion]=idx;
  const options=document.querySelectorAll('.answer-option');
  options.forEach((opt,i)=>{
    opt.style.pointerEvents='none';
    if(i===quizData[currentQuizQuestion].correct){
      opt.classList.add('correct');
    }else if(i===selectedAnswer){
      opt.classList.add('incorrect');
    }
  });
  if(selectedAnswer===quizData[currentQuizQuestion].correct){
    quizScore++;
    showToast('‚úîÔ∏è Jawaban Benar!');
  }else{
    showToast('‚ùå Jawaban Salah!');
  }
}
function nextQuestion(){
  if(selectedAnswer===null){showToast('Pilih jawaban dulu!','#ed8936'); return;}
  if(currentQuizQuestion<quizData.length-1){
    currentQuizQuestion++;
    displayQuestion();
    selectedAnswer=null;
  }else{
    document.getElementById('quizContent').style.display='none';
    document.getElementById('quizResult').style.display='block';
    document.getElementById('finalScore').textContent=`${quizScore}/${quizData.length}`;
  }
}
function previousQuestion(){if(currentQuizQuestion>0){currentQuizQuestion--;displayQuestion();selectedAnswer=null;}}
function restartQuiz(){currentQuizQuestion=0;quizScore=0;selectedAnswer=null;quizAnswers=[];document.getElementById('quizContent').style.display='block';document.getElementById('quizResult').style.display='none';displayQuestion();}
displayQuestion();

// Game Memory (Sederhana)
const memoryCardPairs=[
{ id:1, icon:'üñ±Ô∏è'},{ id:2, icon:'‚å®Ô∏è'},{ id:3, icon:'üíª'},{ id:4, icon:'üé®'},{ id:5, icon:'‚≠ï'},{ id:6, icon:'‚óºÔ∏è'},{ id:7, icon:'üî∫'},{ id:8, icon:'‚úíÔ∏è'},{ id:9, icon:'üåÑ'},{ id:10, icon:'üìÅ'}
];
let memoryCards=[], flippedCards=[], matchedPairs=0, attempts=0, canFlip=true;
function initializeGame(){
  matchedPairs=0; attempts=0; flippedCards=[]; canFlip=true;
  memoryCards=[];
  memoryCardPairs.forEach(p=>{memoryCards.push({...p, uniqueId:p.id+'-1'}); memoryCards.push({...p, uniqueId:p.id+'-2'});});
  memoryCards.sort(()=>Math.random()-0.5);
  displayMemoryCards();
}
function displayMemoryCards(){
  const grid=document.getElementById('memoryGrid'); grid.innerHTML='';
  memoryCards.forEach((card,i)=>{
    const div=document.createElement('div'); div.className='memory-card'; div.dataset.id=card.id; div.dataset.index=i;
    div.innerHTML='?'; div.onclick=()=>flipCard(div,card);
    grid.appendChild(div);
  });
}
function flipCard(el,card){
  if(!canFlip || el.classList.contains('flipped') || el.classList.contains('matched')) return;
  el.classList.add('flipped'); el.textContent=card.icon;
  flippedCards.push({element:el,card:card});
  if(flippedCards.length===2){
    canFlip=false; attempts++; document.getElementById('gameAttempts').textContent=attempts;
    setTimeout(checkMatch,800);
  }
}
function checkMatch(){
  const [first,second]=flippedCards;
  if(first.card.id===second.card.id){
    first.element.classList.add('matched'); second.element.classList.add('matched');
    matchedPairs++; document.getElementById('gameScore').textContent=`${matchedPairs}/10`;
    showToast('‚úîÔ∏è Cocok!');
    flippedCards=[]; canFlip=true;
  }else{
    showToast('‚ùå Tidak cocok!','#f56565');
    setTimeout(()=>{first.element.classList.remove('flipped'); first.element.textContent='?'; second.element.classList.remove('flipped'); second.element.textContent='?'; flippedCards=[]; canFlip=true;},1000);
  }
}
function restartGame(){initializeGame();}
initializeGame();

// Ranking (sementara dummy)
const allScores=[];
function saveScore(){
  const name=document.getElementById('playerNameInput').value.trim();
  if(!name){showToast('Masukkan nama','#ed8936'); return;}
  allScores.push({player_name:name, quiz_score:quizScore, game_score:matchedPairs});
  document.getElementById('nameModal').style.display='none';
  updateRankingDisplay();
}
function skipSaveScore(){document.getElementById('nameModal').style.display='none';}
function updateRankingDisplay(){
  const tbody=document.getElementById('rankingTableBody'); tbody.innerHTML='';
  allScores.forEach((s,i)=>{
    const row=document.createElement('tr');
    row.innerHTML=`<td>${i+1}</td><td>${s.player_name}</td><td>${s.quiz_score}</td><td>${s.game_score}</td><td>${s.quiz_score+s.game_score}</td>`;
    tbody.appendChild(row);
  });
}
</script>
</body>
